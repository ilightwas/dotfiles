{
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "One Monokai",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "color-highlight.markerType": "dot-before",
    "workbench.editor.enablePreview": false,
    "shellcheck.customArgs": ["--shell=sh"],
    "shellcheck.exclude": ["1091", "2155", "1090", "2139"],
    "files.watcherExclude": {
        "**/.git/*/**": true,
        "**/node_modules/*/**": true,
        "**/lib/*/**" : true,
        "${env:HOME}/.cache" : true,
        "${env:HOME}/.dbus" : true,
        "${env:HOME}/.mozila" : true,
        "${env:HOME}/.pki" : true,
        "${env:HOME}/.ssh" : true,
        "${env:HOME}/.ssr" : true,
        "${env:HOME}/.themes" : true,
        "${env:HOME}/.vscode-oss" : true,
        "${env:HOME}/.w3m" : true,
        "${env:HOME}/.config/discord" : true,
        "${env:HOME}/.config/google-chr*" : true,
        "${env:HOME}/.config/spotify" : true,
        "${env:HOME}/.config/VSCodium" : true,
        "${env:HOME}/.config/pulse" : true,
        "${env:HOME}/.local/share/dotfiles" : true,
        "${env:HOME}/.local/share/sysportage" : true,
        "${env:HOME}/.local/share/icons" : true,
    }
}
