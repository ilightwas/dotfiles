# Manage dotfiles with bare git repo
alias gitd="git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
alias gits="git --git-dir=$HOME/.sysportage --work-tree=/etc/portage"
alias cdp="cd /etc/portage"

# Suckless
alias srein="sudo make clean install"
alias csrein="rm -f config.h && sudo make clean install"
alias dwmq="killall startdwm.sh"

# Colors
alias \
	ls="ls --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	egrep="egrep --color=auto" \
	fgrep="fgrep --color=auto" \
	diff="diff --color=auto"

# Verbosity
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -Iv" \
	mkdir="mkdir -pv" \

# Navigation
alias \
	..="cd .." \
	...="cd ../.." \
	ll="ls -la" \
	la="ls -a" \
	l.="ls -a | egrep '^\.'" \

# Misc
alias codiumdwm="codium -n $SUCKLESS_DIR/dwm"
alias codiumst="codium -n $SUCKLESS_DIR/st"
alias codiumdmenu="codium -n $SUCKLESS_DIR/dmenu"
alias codiumd="GIT_DIR=$HOME/.dotfiles GIT_WORK_TREE=$HOME codium -n $HOME"
alias codiums="GIT_DIR=$HOME/.sysconfig GIT_WORK_TREE=/etc/portage codium -n /etc/portage"
alias gchrome="google-chrome-stable --force-dark-mode >>$XDG_CACHE_HOME/gchrome.log 2>&1 & disown"

